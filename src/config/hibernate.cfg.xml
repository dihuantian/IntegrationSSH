<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>
<session-factory>
    
	<property name="myeclipse.connection.profile">SSHDriver</property>
    <!-- 指定连接池里最大连接数 -->
    <property name="hibernate.c3p0.max_size">40</property>
    <!-- 指定连接池里最小连接数 -->
    <property name="hibernate.c3p0.min_size">20</property>
    <!-- 指定连接池里连接的超时时长 -->
    <property name="hibernate.c3p0.timeout">88888</property>
    <!-- 指定数据库方言 -->
    <property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
    <!-- 显示Hibernate持久化操作所生成的SQL -->
    <property name="show_sql">true</property>
    <!-- 将SQL脚本进行格式化后再输出 -->
    <property name="hibernate.format_sql">true</property>
    
    <!-- 数据库到表之间映射 -->
    <mapping resource="com/Integration/Entities/Usertable.hbm.xml"/>
    <mapping resource="com/Integration/Entities/Newstable.hbm.xml"/>
    <mapping resource="com/Integration/Entities/Newsrecommendtable.hbm.xml"/>
    <mapping resource="com/Integration/Entities/Commentstable.hbm.xml"/>
</session-factory>

</hibernate-configuration>